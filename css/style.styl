@import "reset.css"

#wrapper
	width 320px
	height 460px
	background #e7e7e7
	font-family: "Open Sans"
	font-weight 700

header
	width 320px
	height 45px
	background #ffffff
	position fixed
	top 0px
	left 0px
	border-bottom 1px solid #d1d1d1
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.1)

	.btn
		width 45px
		height 45px
		float: left
		background-size: 30px
		background-position center center
		background-repeat no-repeat

		&#history-btn
			background-image url(../img/history@2x.png)

			&:active
				background-image url(../img/history_over@2x.png)


		&#notifications-btn
			background-image url(../img/notifications@2x.png)			

			&:active
				background-image url(../img/notifications_over@2x.png)

			

	h1
		width 230px
		height 45px
		float left
		text-align center
		line-height 45px
		font-size 20px

